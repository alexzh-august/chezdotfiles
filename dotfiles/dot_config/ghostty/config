# Ghostty Terminal Configuration
# Optimized for Claude Code and development workflows
# https://ghostty.org/docs/config

# ==============================================================================
# Font Configuration
# ==============================================================================
font-family = "JetBrainsMono Nerd Font"
font-size = 13
font-thicken = true

# Ghostty 1.2+ auto-scales Nerd Font symbols, no patched font needed
# but using the Nerd Font variant ensures all glyphs are available

# ==============================================================================
# Theme Configuration - Claude Code Inspired
# ==============================================================================
# Base theme (provides ANSI color palette)
theme = "Shades Of Purple"

# Custom overrides for Claude-inspired aesthetic
background = 1a1625
foreground = e4e4e7

# Glass transparency effect
background-opacity = 0.88
background-blur-radius = 20

# Claude's signature purple/coral accents
cursor-color = a855f7
selection-background = 6d28d9
selection-foreground = ffffff

# Custom palette overrides for Claude vibes
# Purples and violets
palette = 5=#a855f7
palette = 13=#c084fc
# Coral/salmon accent (Claude's secondary color)
palette = 1=#f97316
palette = 9=#fb923c
# Cyan/teal for contrast
palette = 6=#22d3ee
palette = 14=#67e8f9

# ==============================================================================
# Window Configuration
# ==============================================================================
window-padding-x = 8
window-padding-y = 8
window-decoration = true
window-title-font-family = "JetBrains Mono"

# macOS specific
macos-option-as-alt = true
macos-titlebar-style = tabs

# ==============================================================================
# Cursor Configuration
# ==============================================================================
cursor-style = block
cursor-style-blink = true
# Cursor color set in theme section (a855f7 - Claude purple)

# ==============================================================================
# Scrollback
# ==============================================================================
scrollback-limit = 100000

# ==============================================================================
# Clipboard Configuration
# ==============================================================================
# Enable OSC 52 for clipboard integration (important for Claude Code)
clipboard-read = allow
clipboard-write = allow
clipboard-trim-trailing-spaces = true

# ==============================================================================
# Keybindings - Claude Code Optimized
# ==============================================================================

# CRITICAL: Shift+Enter for multiline input in Claude Code
keybind = shift+enter=text:\x1b\r

# Pane navigation (vim-style)
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+j=goto_split:bottom
keybind = ctrl+shift+k=goto_split:top
keybind = ctrl+shift+l=goto_split:right

# Pane management
keybind = ctrl+shift+d=new_split:right
keybind = ctrl+shift+s=new_split:down
keybind = ctrl+shift+w=close_surface

# Tab management
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+page_up=previous_tab
keybind = ctrl+shift+page_down=next_tab

# Font size adjustment
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+0=reset_font_size

# Quick actions
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+f=toggle_fullscreen
keybind = ctrl+shift+r=reload_config

# macOS-specific keybindings
keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard
keybind = cmd+t=new_tab
keybind = cmd+w=close_surface
keybind = cmd+plus=increase_font_size:1
keybind = cmd+minus=decrease_font_size:1
keybind = cmd+0=reset_font_size
keybind = cmd+enter=toggle_fullscreen

# ==============================================================================
# Shell Integration
# ==============================================================================
shell-integration = detect
shell-integration-features = cursor,sudo,title

# ==============================================================================
# Performance
# ==============================================================================
# GPU acceleration
gtk-single-instance = true

# ==============================================================================
# Bell
# ==============================================================================
bell-features = no-audio, attention, title

# ==============================================================================
# Mouse
# ==============================================================================
mouse-hide-while-typing = true
click-repeat-interval = 300

# ==============================================================================
# Selection
# ==============================================================================
selection-invert-fg-bg = true
copy-on-select = clipboard
